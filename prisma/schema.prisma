// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  firstName String?
  lastName  String?
  role      UserRole @default(EMPLOYEE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  workOrders     WorkOrder[]
  assignedOrders WorkOrder[] @relation("AssignedTechnician")

  @@map("users")
}

model Vehicle {
  id           String      @id @default(cuid())
  make         String
  model        String
  year         Int
  vin          String      @unique
  licensePlate String?
  mileage      Int?
  status       VehicleStatus @default(ACTIVE)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  // Relations
  workOrders WorkOrder[]

  @@map("vehicles")
}

model WorkOrder {
  id          String          @id @default(cuid())
  orderNumber String          @unique
  title       String
  description String?
  priority    Priority        @default(MEDIUM)
  status      WorkOrderStatus @default(PENDING)
  
  // Time tracking
  estimatedHours Float?
  actualHours    Float?
  startedAt      DateTime?
  completedAt    DateTime?
  dueDate        DateTime?
  
  // Relations
  vehicleId    String
  vehicle      Vehicle @relation(fields: [vehicleId], references: [id])
  createdById  String
  createdBy    User    @relation(fields: [createdById], references: [id])
  assignedToId String?
  assignedTo   User?   @relation("AssignedTechnician", fields: [assignedToId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("work_orders")
}

model Part {
  id          String @id @default(cuid())
  partNumber  String @unique
  name        String
  description String?
  category    String
  price       Float
  stockLevel  Int    @default(0)
  minStock    Int    @default(0)
  supplier    String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("parts")
}

// Enums
enum UserRole {
  ADMIN
  MANAGER
  SERVICE_ADVISOR
  TECHNICIAN
  PARTS_CLERK
  EMPLOYEE
}

enum VehicleStatus {
  ACTIVE
  IN_SERVICE
  OUT_OF_SERVICE
  RETIRED
}

enum WorkOrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
  ON_HOLD
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}
